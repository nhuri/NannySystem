<Application x:Class="UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!--#region Cards' style-->
        <!--#region TextBlock Style -->
        <Style TargetType="TextBlock" x:Key="FieldName">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Foreground" Value="#FF0062D7"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="FieldValue">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="UltraLight"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="TextBoxTitle">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF1E73E5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <Style TargetType="RichTextBox" x:Key="RichBoxValueStyle">
            <Setter Property="FontWeight" Value="UltraLight"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="ComboBox" x:Key="ComboBoxOfAddWindowStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="UltraLight"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="ComboBoxItem" x:Key="ComboBoxItemOfAddWindowStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="UltraLight"/>
        </Style>

        <!--#endregion-->

        <!--#region ButtonStyle-->
        <Style TargetType="Button" x:Key="CardBtn">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MaxHeight" Value="35"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF0062D7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="DemiBold"/>

        </Style>
        <!--#endregion-->

        <!--#region StackPanel Style-->
        <Style TargetType="StackPanel" x:Key="StackForCardColumn">
            <Setter Property="Margin" Value="15" />
        </Style>
        <!--#endregion-->

        <!--#region List Box without Selection-->
        
        <!--#endregion-->

            <Style TargetType="CheckBox" x:Key="CheckBoxOfCard">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Margin" Value="10,10,0,0"/>
        </Style>

        <!--#endregion-->

        <!--#region  AddWindows style-->
        <Style TargetType="TextBox" x:Key="TextBoxOfAddWidowStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="UltraLight"/>
            <Setter Property="MinHeight" Value="30"/>
        </Style>
        
        <Style TargetType="DatePicker" x:Key="DataPickerOfAddWidowStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="UltraLight"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="CheckBox" x:Key="CheckBoxOfAddWindowStyle">
            <Setter Property="Margin" Value="10,10,0,0"/>
        </Style>
            

            <!--#endregion-->

        <!--#region Window's style-->
        <Style TargetType="Button" x:Key="WindowMainBtn">
            <Setter Property="Margin" Value="15"/>
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="MinWidth" Value="250"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="Foreground" Value="#FF0062D7"/>
            <Setter Property="FontWeight" Value="UltraLight"/>
            <Setter Property="BorderThickness" Value="3"/>

     
         

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="15,15,15,15" BorderBrush="#FF0062D7" Background="White" BorderThickness="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--#endregion-->

        <!--#region DataGrid style -->
        <Style x:Key="ColumnsOfDataGridStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF0062D7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        <!--#endregion-->
        
    </Application.Resources>
</Application>

